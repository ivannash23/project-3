<% if current_user == @user || current_user.Rank > 4 && current_user.company ==@user.company && current_user.platoon == @user.platoon || current_user.Rank > 5 %>

	<h1>E-<%= @user.Rank %> <%= @user.name %></h1> 
	<% @user.tasks.each do |t| %>
		<h3><%= t.title %></h3>	
		<h5 class="date"><%= t.date.strftime("%B %d, %Y") %></h5>
		<h5 class="hour"><%= t.date.strftime("%H:%M") %></h5>
		<h5 class="lat"><%= t.lat %></h5> 
		<h5 class="lng"><%= t.lng %></h5> 
		<%= link_to 'Destroy', task_users_destroy_path(@user, t.id), method: :delete, data: { confirm: 'Are you sure?' } %>
	<% end %>
<% end %>
<div id="map"></div>
<button id="checkIn">Check in</button>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD71DX5vsVlbY1AxHlBqJkfQX0zIbDJAIs&callback=initMap" ></script>
