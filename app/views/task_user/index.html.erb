<% if current_user == @user || current_user.Rank > 4 && current_user.company ==@user.company && current_user.platoon == @user.platoon %>

	<h1>E-<%= @user.Rank %> <%= @user.name %></h1> 
	<% @user.tasks.each do |t| %>
		<h3><%= t.title %></h3>	
		<h5><%= t.date.to_formatted_s(:long) %></h5>	
		<h5 class="lat"><%= t.lat %></h5> 
		<h5 class="lng"><%= t.lng %></h5> 
		<%= link_to 'Destroy', task_users_path(t.id), method: :delete, data: { confirm: 'Are you sure?' } %>
	<% end %>
<% else %>
	Not your page, Marine.
<% end %>
